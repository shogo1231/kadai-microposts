
  <% if current_user.favorete?(favpost) %>
    <%= form_with(model: current_user.favoretes.find_by(user_id: micropost.id), local: true, method: :delete) do |f| %>
      <%= hidden_field_tag :micropost_id, micropost.id %>
      <%= f.submit 'お気に入り解除', class: 'btn btn-danger btn-sm' %>
    <% end %>
  <% else %>
    <%= form_with(model: current_user.favoretes.build, local: true) do |f| %>
      <%= hidden_field_tag :micropost_id, favpost %>
      <%= f.submit 'お気に入り追加', class: 'btn btn-primary btn-sm' %>
    <% end %>
  <% end %>